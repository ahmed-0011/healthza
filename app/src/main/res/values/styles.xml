<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- splash screen-->
    <style name="splashScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Activity Animation Transition -->
    <style name="ActivityTransition">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <!-- button style -->
    <style name="buttonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/my_textAppearance</item>
    </style>

    <style name="my_textAppearance" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- text button style -->
    <style name="textButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- rounded button style -->
    <style name="roundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">51%</item>
    </style>


    <!-- select button style -->
    <style name="selectButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <style name="listItemButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- TextInputLayout style -->
    <style name="textInputLayoutFilledBox" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="startIconTint">@color/hint_color</item>
        <item name="endIconTint">@color/hint_color</item>
        <item name="hintAnimationEnabled">true</item>
    </style>


    <style name="DeleteDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
       <item name="materialAlertDialogTitleTextStyle">@style/MaterialDeleteDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialDeleteDialog.App.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Delete.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Cancel.Button.Negative</item>
    </style>

    <style name="MaterialDeleteDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MaterialDeleteDialog.App.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Delete.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Cancel.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

</resources>