<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:padding="8dp"
        tools:context=".ui.patientMedicalRecords">

        <Spinner
            android:id="@+id/spinnerPatient"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/SelectPatient"
            android:foreground="@drawable/round_empty"
            android:prompt="@string/SelectPatientPrompt"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toTopOf="@+id/outerPatient"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outerPatient"
            style="@style/textInputLayoutFilledBox"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:hint="@string/enter_patient_name_or_id"
            app:layout_constraintBottom_toTopOf="@+id/SearchPatient"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/innerPatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/round_empty"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/bubblegum_sans"
                android:inputType="text"
                android:paddingStart="10dp"
                android:selectAllOnFocus="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cleartButton"
            style="@style/listItemButtonStyle"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/remove_request_color"
            android:fontFamily="@font/candal"
            android:text="Clear"
            app:layout_constraintBottom_toTopOf="@+id/dateCB"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectTestButton"
            style="@style/listItemButtonStyle"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/candal"
            android:text="Select"
            app:layout_constraintBottom_toTopOf="@+id/cleartButton"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recordsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_recyclerview"
            android:padding="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/test_item" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dateTestInputLayout"
            style="@style/textInputLayoutFilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Enter date of tests:  YYYY-MM-DD"
            app:layout_constraintBottom_toTopOf="@+id/testViewButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dateTestEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:inputType="date"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/SearchPatient"
            android:layout_width="115dp"
            android:layout_height="42dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/teal_700"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/search"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:icon="?android:attr/actionModeWebSearchDrawable"
            app:iconGravity="textEnd"
            app:layout_constraintBottom_toTopOf="@+id/dateTestInputLayout"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/testViewButton"
            style="@style/buttonStyle"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="View"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/dateCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-black"
            android:text="All Dates"
            app:layout_constraintBottom_toTopOf="@+id/dateTestInputLayout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/candal"
            android:text="Select Records:"
            android:textAlignment="gravity"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/selectTestButton"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>